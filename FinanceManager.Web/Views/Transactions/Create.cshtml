@model FinanceManager.Web.Models.Transaction
@{
    ViewData["Title"] = "Create Transaction";
}
<h1 class="h4 mb-3"><i class="bi bi-receipt me-2"></i>Create Transaction</h1>

<form method="post" class="bg-body border rounded-3 p-3">
  <div asp-validation-summary="All" class="text-danger mb-2"></div>

  <div class="mb-3">
    <label asp-for="Date" class="form-label"></label>
    <input asp-for="Date" type="date" class="form-control" />
    <div class="form-text text-danger" asp-validation-for="Date"></div>
  </div>

  <div class="mb-3">
    <label asp-for="Amount" class="form-label"></label>
    <input asp-for="Amount" type="number" step="0.01" inputmode="decimal" class="form-control" />
    <small class="text-secondary">Enter the amount; pick Income/Expense via Category.</small>
    <div class="form-text text-danger" asp-validation-for="Amount"></div>
  </div>

  <div class="mb-3">
    <label asp-for="CategoryId" class="form-label">Category</label>
    <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="form-select"></select>
    <div class="form-text text-danger" asp-validation-for="CategoryId"></div>
  </div>

  <div class="mb-3">
    <label asp-for="Notes" class="form-label"></label>
    <input asp-for="Notes" class="form-control" />
    <div class="form-text text-danger" asp-validation-for="Notes"></div>
  </div>

  <div class="form-actions">
    <button class="btn btn-primary" type="submit">Save</button>
    <a class="btn btn-outline-secondary" href="/Transactions">Cancel</a>
  </div>
</form>
