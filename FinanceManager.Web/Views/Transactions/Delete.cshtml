@model FinanceManager.Web.Models.Transaction
@{
    ViewData["Title"] = "Delete Transaction";
}
<h1 class="h4 mb-3 text-danger"><i class="bi bi-trash me-2"></i>Delete Transaction</h1>
<p>Are you sure you want to delete this transaction?</p>
<dl>
  <dt>Date</dt><dd>@Model.Date.ToString("yyyy-MM-dd")</dd>
  <dt>Category</dt><dd>@Model.Category?.Name</dd>
  <dt>Amount</dt><dd>@Model.Amount.ToString("C")</dd>
  <dt>Notes</dt><dd>@Model.Notes</dd>
</dl>
<form method="post">
  <input type="hidden" asp-for="Id" />
  <div class="actions">
    <button class="btn primary" type="submit">Yes, delete</button>
    <a class="btn" href="/Transactions">Cancel</a>
  </div>
</form>
