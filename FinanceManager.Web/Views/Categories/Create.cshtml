@model FinanceManager.Web.Models.Category
@{
    ViewData["Title"] = "Create Category";
}
<h1 class="h4 mb-3"><i class="bi bi-tags me-2"></i>Create Category</h1>
<form method="post" class="bg-body border rounded-3 p-3">
  <div asp-validation-summary="All" class="text-danger"></div>
  <div class="mb-3">
    <label class="form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name" />
    <div class="form-text text-danger" asp-validation-for="Name"></div>
  </div>
  <div class="mb-3">
    <label class="form-label" asp-for="Type"></label>
    <select class="form-select" asp-for="Type" asp-items="Html.GetEnumSelectList<FinanceManager.Web.Models.CategoryType>()"></select>
  </div>
  <div class="form-actions">
    <button class="btn btn-primary" type="submit">Save</button>
    <a class="btn btn-outline-secondary" href="/Categories">Cancel</a>
  </div>
</form>
