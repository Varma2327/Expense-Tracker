@model IEnumerable<FinanceManager.Web.Models.Category>
@{
    ViewData["Title"] = "Categories";
}
<h1 class="h4 mb-3"><i class="bi bi-tags me-2"></i>Categories</h1>
<a class="btn btn-primary mb-2" href="/Categories/Create"><i class="bi bi-plus-lg me-1"></i>Add Category</a>
<div class="table-responsive"><table class="table table-hover align-middle">
  <thead>
    <tr><th>Name</th><th>Type</th><th></th></tr>
  </thead>
  <tbody>
  @foreach (var c in Model) {
    <tr>
      <td>@c.Name</td>
      <td>@c.Type</td>
      <td>
        <a class="btn btn-outline-primary btn-sm" href="/Categories/Edit/@c.Id"><i class="bi bi-pencil me-1"></i>Edit</a>
        <a class="btn btn-outline-danger btn-sm" href="/Categories/Delete/@c.Id"><i class="bi bi-trash me-1"></i>Delete</a>
      </td>
    </tr>
  }
  </tbody>
</table></div>
